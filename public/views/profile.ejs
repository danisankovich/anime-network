<div class="container">
  <div class="row">
    <div class="small-9 medium-9 large-9 columns profileSpace">
      <div class="small-4 medium-4 large-4 columns">
        <img class="avatar" ng-src="{{user.avatar}}" alt="">
        <form>
          <div flow-init flow-name="uploader.flow" flow-files-added="processFiles($files)">
            <button flow-btn type="file" class="tiny button">Upload Images</button>
            <button class="tiny button" ng-click="uploadImage()">Submit</button>
          </div>
        </form>
      </div>
      <div class="small-6 medium-6 large-6 columns">
        <h3>Username: {{user.username}}</h3>
        <h5>Email: {{user.email}}</h5>
        <h6>User Since: {{user.createdAt | date : 'MMM d, y'}}</h6>
      </div>
      <div class="row">
        <div class="small-12 medium-12 large-12 columns">
          <div class="small-4 medium-4 large-4 columns borderbar">
            Anime Completed: {{completedLength}} <a ng-click="completedAnime()">(View)</a><br>
            Anime Watching: {{watchingLength}} <a ng-click="watchingAnime()">(View)</a><br>
            Anime Favorited: {{favoritedLength}} <a ng-click="favoritedAnime()">(View)</a><br>
            Anime To Watch: {{willWatchLength}} <a ng-click="willWatchAnime()">(View)</a><br>
          </div>
        </div>
      </div>
    </div>
    <div class="small-3 medium-3 large-3 columns profileSpace">
      <h4>Friends List</h4>
      <ul> Pending
        <button class="tiny button" ng-click="pendingCollapse = true" ng-show="!pendingCollapse">Hide</button>
        <button class="tiny button" ng-click="pendingCollapse = false" ng-show="pendingCollapse">Show</button>
        <li ng-repeat="friend in user.friendList" ng-show="friend.pending && !pendingCollapse"><a ng-click="toUser(friend)">{{friend.username}}</a> <a ng-click="accept(friend)" ng-show="!friend.initiator">Accept</a></li>
      </ul>
      <ul> Friends
        <button class="tiny button" ng-click="friendCollapse = true" ng-show="!friendCollapse">Hide</button>
        <button class="tiny button" ng-click="friendCollapse = false" ng-show="friendCollapse">Show</button>
        <li ng-repeat="friend in user.friendList" ng-show="!friend.pending && !friendCollapse"><a ng-click="toUser(friend)">{{friend.username}}</a></li>
      </ul>
    </div>
  </div>
</div>

