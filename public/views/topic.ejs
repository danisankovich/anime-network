<div class='layout'>
  <div class="container">
    <div class="row">
      <div id="originalPost">
        <div class="small-12 columns">
          <div id="topicHeader">
            <div class="small-12 columns headerColor">
              <div class="small-4 columns">
                <div id="author">
                  <p class="headerPad">Author</p>
                </div>
              </div>
              <!-- <div id="author"><p>{{topic.user.username}}</p></div> -->
              <div class="small-8 columns">
                <div id="title"><p class="headerPad">Topic: {{topic.title}} (Read {{topic.viewCount}} Times)</p></div>
              </div>
            </div>
          </div>
          <div id="originalContent">
            <div class="small-12 columns contentColor">
              <div class="small-4 columns">
                <div id="authorInfo">
                  <div id="author">
                    <p>User: {{topic.user.username}}</p>
                    <p>Picture: {{topic.user.profilePic}}</p>
                    <p>Member Since: {{topic.user.createdAt | date: "MMM d, y"}}</p>
                    <p>Message: Email | Message</p>
                    <p>Karma: </p>
                  </div>
                </div>
              </div>
              <div class="small-8 columns">
                <div>
                  <h6>Origin Post | Written by {{topic.user.username}} on {{topic.dateCreated | date: "MMM d, y"}}</h6>
                  <hr>
                  <p>{{topic.body}}</p>
                  <div ng-if="topic.user.signature">
                    <hr>
                    <p>{{topic.user.signature}}</p>
                  </div>
                </div>
                <!-- <div class="small-3 small-offset-9 columns replyDiv">
                  <a class="replyButton">REPLY TO POST</a> <!--This will not be on th einitial post.
                    Only on subsequent posts. replying will put them in the response's array. display
                    will have them as a tree, but it only goes 1 layer deeper -->
                <!-- </div> -->
                <!-- <div id="title"><p class="headerPad">RE: {{topic.title}}</p></div> -->
              </div>
            </div>
            <div class="columns small-12">
              <div class="columns small-12">
                <div class="small-3 small-offset-9 columns replyDiv">
                  <a class="replyButton" ng-click="replyModal()">REPLY TO TOPIC</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div id="responses">
        <div class="small-12 columns">
          <p ng-repeat="response in topic.responses">{{response}}</p>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="replyModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
<h2 id="modalTitle">Reply To Topic</h2>
<p class="lead">Choose a Maximum of 4 Genres</p>
<form ng-submit="reply(response)" ng-model="genre">
  <textarea ng-model="response.body"></textarea>
  <input type="submit" value="Submit">
</form>
<a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>
