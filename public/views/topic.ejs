<div class='layout'>
  <div class="container">
    <div class="row">
      <div id="originalPost">
        <div class="small-12 columns">
          <div id="topicHeader">
            <div class="small-12 columns headerColor">
              <div class="small-4 columns">
                <div id="author">
                  <p class="headerPad">Author</p>
                </div>
              </div>
              <!-- <div id="author"><p>{{topic.user.username}}</p></div> -->
              <div class="small-8 columns">
                <div id="title"><p class="headerPad">Topic: {{topic.title}} (Read {{topic.viewCount}} Times)</p></div>
              </div>
            </div>
          </div>
          <div id="originalContent">
            <div class="small-12 columns contentColor">
              <div class="small-4 columns">
                <div id="authorInfo">
                  <div id="author">
                    <p>User: <a ng-click="toUser(topic)">{{topic.user.username}}</a></p>
                    <p>Picture: {{topic.user.profilePic}}</p>
                    <p>Member Since: {{topic.user.createdAt | date: "MMM d, y"}}</p>
                    <p>Message: Email | Message</p>
                    <p>Karma: </p>
                  </div>
                </div>
              </div>
              <div class="small-8 columns">
                <div>
                  <h6>Original Post | Written by {{topic.user.username}} on {{topic.dateCreated | date: "MMM d, y"}}</h6>
                  <hr>
                  <p>{{topic.body}}</p>
                  <div ng-if="topic.user.signature">
                    <hr>
                    <p>{{topic.user.signature}}</p>
                  </div>
                </div>
              </div>
            </div>
            <!-- <div class="row"> -->
              <!-- <div id="responses"> -->
                <div ng-repeat="response in topic.responses">
                  <div class="small-12 columns contentColor">
                    <div class="small-4 columns">
                      <div id="authorInfo">
                        <div id="author">
                          <p>User: {{topic.user.username}}</p>
                          <p>Picture: {{topic.user.profilePic}}</p>
                          <p>Member Since: {{topic.user.createdAt | date: "MMM d, y"}}</p>
                          <p>Message: Email | Message</p>
                          <p>Karma: </p>
                        </div>
                      </div>
                    </div>
                    <div class="small-8 columns">
                      <div id="title"><p class="headerPad">RE: {{topic.title}}</p></div>
                      <p>
                        {{response.body}}
                      </p>
                      <div class="small-3 small-offset-9 columns replyDiv">
                        <a class="replyButton" ng-click="replyPostModal()">REPLY TO POST</a>
                      </div>
                    </div>
                    <div ng-repeat="post in response.responses">
                  <div class="columns small-11 small-offset-1 contentColor">
                    <div class="small-4 columns">
                      <div id="authorInfo">
                        <div id="author">
                          <p>User: asdf</p>
                          <p>Picture: asdf</p>
                          <p>Member Since: asfaf</p>
                          <p>Message: Email | Message</p>
                          <p>Karma: </p>
                        </div>
                      </div>
                    </div>
                    <div class="small-8 columns">
                      <p>
                        {{post.body}}
                      </p>
                      <div class="small-3 small-offset-9 columns replyDiv">
                        <a class="replyButton" ng-click="replyPostModal()">REPLY TO POST</a>
                      </div>
                    </div>
                  </div>
                  </div>
                  <!-- </div>
                  </div> -->
                </div>
              </div>

                <div class="columns small-12">
                  <div class="small-3 small-offset-9 columns replyDiv">
                    <a class="replyButton" ng-click="replyModal()">REPLY TO TOPIC</a>
                  </div>
                </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="replyModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
  <h2 id="modalTitle">Reply To Topic</h2>
  <p class="lead">Choose a Maximum of 4 Genres</p>
  <form ng-submit="reply(response)" ng-model="genre">
    <textarea ng-model="response.body"></textarea>
    <input type="submit" value="Submit">
  </form>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>

<div id="replyPostModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
  <h2 id="modalTitle">Reply To Topic</h2>
  <p class="lead">Choose a Maximum of 4 Genres</p>
  <form ng-submit="replyToPost(response)" ng-model="genre">
    <textarea ng-model="response.body"></textarea>
    <input type="submit" value="Submit">
  </form>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>
