<div class="container">
  <div class="row">
    <div class="small-12 large-12 medium-12 columns">
    <div class="small-6 small-offset-4 large-6 large-offset-4 medium-6 medium-offset-4 columns">

  <p class="lead">Login.</p><br/>
  <form role="form" action="/login" method="post" style="max-width: 300px;">
    <div class="form-group">
      <input type="text" name="username" placeholder="Enter Username" class="form-control"/>
    </div>
    <div class="form-group">
      <input type="password" name="password" placeholder="Password" class="form-control"/>
    </div>
    <button type="submit" class="button round small success">Submit</button>&nbsp;
    <a ui-sref="/"><button type="button" class="button round small alert">Cancel</button></a>
    </form>
  </div>
  <div><span>Need to sign up? </span><a ui-sref="register">Register</a></div>
</div>
</div>
</div>
